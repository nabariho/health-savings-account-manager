{
  "project": { "name": "HSA Onboarding (AI agents)" },
  "permissions": {
    "allow": [
      "Read(**)", "LS", "Grep", "Glob",
      "Edit", "MultiEdit", "Write",
      "Bash(git *), Bash(gh *), Bash(npm run *)", "Bash(pnpm *)", "Bash(yarn *)",
      "Bash(pip *)", "Bash(uv *)", "Bash(pytest *)",
      "Bash(docker build:*)", "Bash(docker compose:*)",
      "WebFetch", "WebSearch"
    ],
    "deny": [
      "Read(./.env*)", "Read(./secrets/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command",
            "command": "jq -r '.tool_input.command' >> ~/.claude/bash.log" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-after-edit.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
