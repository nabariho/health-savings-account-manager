{
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(pip *)",
      "Bash(pytest *)",
      "Bash(docker build:*)",
      "Bash(docker compose:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-after-edit.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}

